{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prHourlyLimit": 0, 
  "prConcurrentLimit": 10,
  "enabledManagers": [
    "custom.regex",
    "github-actions"
  ],
  "packageRules": [
    {
      "description": "Group all GitHub Actions (public + Prypco template) into a single PR",
      "matchManagers": ["github-actions", "custom.regex"],
      "groupName": "GitHub Actions updates",
      "prCreation": "immediate",
      "automerge": false,
      "commitMessageTopic": "Update GitHub Actions and Template",
      "schedule": ["at any time"]
    }
  ],
  "customManagers": [

    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.github/workflows/.*\\.ya?ml$/",
        "/^\\.github/actions/[^/]+/.*\\.ya?ml$/"
      ],
      "matchStrings": [
        "uses:\\s*anujrajkumar/template(?:/[\\w./-]+)?@(?<currentValue>v\\d+(?:\\.\\d+){0,2}(?:[-+][0-9A-Za-z.-]+)?)"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "anujrajkumar/template",
      "versioningTemplate": "semver-coerced"
    }
  ]
}
