{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 10,
  "enabledManagers": [
    "custom.regex",
    "github-actions"
  ],
  "packageRules": [
    {
      "description": "Group all public GitHub Actions into a single PR",
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "Public GitHub Actions updates",
      "commitMessagePrefix": "chore",
      "commitMessageAction": "deps",
      "commitMessageTopic": "Update all custom GitHub Actions and workflow version",
      "commitMessageSuffix": "[skip ci]",
      "prCreation": "immediate",
      "automerge": false,
      "schedule": [
        "at any time"
      ],
      "separateMajorMinor": false,
      "separateMinorPatch": false,
      "matchPackageNames": [
        "!Prypco/GithubActionsTemplates",
        "!anujrajkumar/template"
      ]
    },
    {
      "description": "Group template bumps (custom reusable workflows) into a single PR",
      "matchManagers": [
        "custom.regex"
      ],
      "matchPackageNames": [
        "Prypco/GithubActionsTemplates",
        "anujrajkumar/template"
      ],
      "groupName": "Template updates",
      "groupSlug": "template-updates",
      "commitMessagePrefix": "chore",
      "commitMessageAction": "deps",
      "commitMessageTopic": "Update all custom GitHub Actions and workflow version",
      "commitMessageSuffix": "[skip ci]",
      "prCreation": "immediate",
      "automerge": false,
      "schedule": [
        "at any time"
      ]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.github/workflows/.*\\.ya?ml$/"
      ],
      "matchStrings": [
        "uses:\\s*(?:Prypco/GithubActionsTemplates|anujrajkumar/template)(?:/[\\w./-]+)?@(?<currentValue>v\\d+(?:\\.\\d+){0,2}(?:[-+][0-9A-Za-z.-]+)?)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "anujrajkumar/template",
      "versioningTemplate": "semver-coerced"
    }
  ]
}
