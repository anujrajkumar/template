{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "github-actions": { "enabled": true },

  "packageRules": [
    {
      "description": "Auto-PR for template bumps",
      "matchManagers": ["regex"],
      "matchPackageNames": ["anujrajkumar/template"],
      "prCreation": "immediate",
      "automerge": false,
      "commitMessageTopic": "Update template version",
      "groupName": "Template updates"
    }
  ],

  "regexManagers": [
    {
      "fileMatch": [
        "^\\.github/workflows/.*\\.ya?ml$",
        ".*\\.ya?ml$"
      ],
      "matchStrings": [
        "uses:\\s*anujrajkumar/template(?:/[\\w./-]+)?@(?<currentValue>v?\\d+(?:\\.\\d+){0,2}(?:[-+][0-9A-Za-z.-]+)?)"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "anujrajkumar/template",
      "versioningTemplate": "semver-coerced"
    }
  ]
}
