{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],

  "prHourlyLimit": 0,
  "prConcurrentLimit": 10,

  "enabledManagers": ["custom.regex", "github-actions"],

  "packageRules": [
    {
      "description": "Group all public GitHub Actions into a single PR",
      "matchManagers": ["github-actions"],
      "excludePackageNames": ["Prypco/GithubActionsTemplates", "anujrajkumar/template"],
      "groupName": "Public GitHub Actions updates",
      "groupSlug": "public-gha-updates",
      "commitMessageTopic": "Update public GitHub Actions",
      "prCreation": "immediate",
      "automerge": false,
      "schedule": ["at any time"]
    },
    {
      "description": "Group template bumps (custom reusable workflows) into a single PR",
      "matchManagers": ["custom.regex"],
      "matchPackageNames": [
        "Prypco/GithubActionsTemplates",
        "anujrajkumar/template"
      ],
      "groupName": "Template updates",
      "groupSlug": "template-updates",
      "commitMessageTopic": "Update template version",
      "prCreation": "immediate",
      "automerge": false,
      "schedule": ["at any time"]
    }
  ],

  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.github/actions/[^/]+/.*\\.ya?ml$/"
      ],
      "matchStrings": [
        "uses:\\s*(?:Prypco/GithubActionsTemplates|anujrajkumar/template)(?:/[\\w./-]+)?@(?<currentValue>v\\d+(?:\\.\\d+){0,2}(?:[-+][0-9A-Za-z.-]+)?)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "anujrajkumar/template",
      "versioningTemplate": "semver-coerced"
    }
  ]
}
